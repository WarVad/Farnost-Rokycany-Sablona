    .obsah
        color white
        margin-top: 80px                         
        background-color: #FEF9F5
        max-width: 1300px
        display: flex                
        flex-direction: column
        justify-content: flex-start

        @media only screen and (max-width: 890px)
            display: flex                
            flex-direction: column
            justify-content: center               
            

        &-nadpis
            display: flex                
            flex-direction: row
            justify-content: center
            color black  

        &-aktuality
            display: grid;
            justify-content: center;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            grid-column-gap: 21px;
            grid-row-gap: 21px;
            padding 21px

.Artical-card
    display flex
    justify-content: flex-start
    align-items: center
    flex-direction: column
    //height: 325px
    background-color: white
    color black
    border-radius: 5px
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    text-decoration: none
    transition: transform .2s

    &:hover
        transform: scale(1.1)
    
    &-header
        height: 154px
        width: 100%

        img
            width: 100%
            height: 100%
            object-fit: cover
            border-radius: 5px 5px 0 0

    &-date
        border-bottom: 1px solid grey
        width: 65%
        text-align: center
        padding 10px

    &-content
        padding 10px
        font-size 1.3rem
        font-weight: bold
        display: flex
        justify-content: center 

        p
            margin: 0
            text-align: center


